---
import { formatDate } from '../utils/blog';
import type { BlogPost } from '../content.config';

export interface Props {
  post: BlogPost;
}
const { post } = Astro.props;
---

<a href={`/blog/${post.id}/`}>
  <div
    class="hover:bg-primary/50 h-full rounded-2xl bg-gray-900 p-[1px] text-sm shadow-[inset_0_0_0_1px_rgba(255,255,255,0.4)]"
  >
    <div class="flex h-full w-full flex-col rounded-[1rem] bg-gray-800 p-4 text-white opacity-90">
      <div class="flex-auto">
        <div class="flex justify-between pb-4 text-xs">
          <p>{formatDate(post.data.date)}</p>
        </div>
        <p class="pb-4 text-lg font-bold">{post.data.title}</p>
        <p class="line-clamp-6 pt-4">{post.data.description}</p>
      </div>
      <p class="pt-4 underline">read more â†’</p>
    </div>
  </div>
</a>
